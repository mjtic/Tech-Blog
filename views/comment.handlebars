{{!-- single post view --}}
<div class="text-center">
  <h2>{{title}}</h2>
    <p>{{content}}</p>
  <p>Created by {{user.username}} on {{format_date createdAt}}</p>
  <p>
    <button class="btn btn-primary"> + Comment </button>
  </p>
</div>

  {{#if comments.length}}
  <div class="col-md-6 project-list">
    <h3>Current comment:</h3>

    {{#each comments as |comment|}}
    <div class="row mb-2">
      <div class="col-md-8">
       <p>{{content}}</p>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>



<div class="row mt-4">
  <div class="col-md-6">
    <h3>Create a New Comment:</h3>

    <form class="form content">
      <div class="form-group">
        <label for="cotent">Conent:</label>
        <textarea class="form-input" type="text" id="content" name="content"> </textarea>
      </div>

      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create comment</button>
      </div>
    </form>
  </div>



<script src="./js/comment.js"></script>